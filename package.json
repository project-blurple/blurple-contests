{
  "name": "blurple-contests",
  "main": "build",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "docker": "npm run docker:build && npm run docker:up",
    "docker:build": "docker compose build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs --tail=500 -f",
    "docker:start": "npm run docker:up",
    "docker:stop": "npm run docker:down",
    "docker:up": "docker compose up -d",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node .",
    "test": "jest"
  },
  "dependencies": {
    "@sapphire/type": "2.6.0",
    "@typegoose/typegoose": "12.14.0",
    "bufferutil": "4.0.9",
    "chrono-node": "2.8.4",
    "dedent": "1.5.3",
    "discord.js": "14.16.3",
    "dotenv": "16.5.0",
    "human-date": "1.4.0",
    "match-sorter": "8.1.0",
    "mongoose": "8.14.0",
    "winston": "3.18.3",
    "winston-daily-rotate-file": "5.0.0",
    "zlib-sync": "0.1.10"
  },
  "devDependencies": {
    "@tsconfig/node22": "22.0.3",
    "@tsconfig/strictest": "2.0.8",
    "@types/human-date": "1.4.5",
    "@types/jest": "30.0.0",
    "@types/node": "22.19.1",
    "eslint": "9.39.1",
    "eslint-config-promise": "github:promise/eslint-config",
    "jest": "30.2.0",
    "ts-jest": "29.4.5",
    "typescript": "5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "packageManager": "pnpm@10.22.0"
}
