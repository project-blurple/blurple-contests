{
  "name": "blurple-contests",
  "main": "build",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "docker": "npm run docker:build && npm run docker:detached",
    "docker:dev": "npm run docker:build && npm run docker:attached",
    "docker:build": "docker-compose build",
    "docker:down": "docker-compose down",
    "docker:attached": "docker compose up",
    "docker:detached": "docker-compose up -d",
    "lint": "eslint ./src --max-warnings=0",
    "lint:fix": "eslint ./src --fix",
    "start": "node .",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.9.0",
    "bufferutil": "^4.0.6",
    "chrono-node": "^2.3.8",
    "discord.js": "github:monbrey/discord.js#modals",
    "dotenv": "^16.0.1",
    "erlpack": "github:discord/erlpack",
    "human-date": "^1.4.0",
    "match-sorter": "^6.3.1",
    "mongoose": "^6.3.9",
    "superagent": "^8.0.0",
    "utf-8-validate": "^5.0.9",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest": "^1.0.3",
    "@types/human-date": "^1.4.2",
    "@types/node": "^18.0.0",
    "@types/superagent": "^4.1.15",
    "eslint": "^8.18.0",
    "eslint-config-promise": "github:promise/eslint-config",
    "typescript": "^4.6.4"
  },
  "eslintConfig": {
    "extends": "promise"
  }
}
