{
  "name": "blurple-contests",
  "main": "build",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node .",
    "watch": "tsc -w",
    "docker": "npm run docker:build && npm run docker:up",
    "docker:build": "docker-compose build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs --tail=500 -f",
    "docker:start": "npm run docker:up",
    "docker:stop": "npm run docker:down",
    "docker:up": "docker-compose up -d"
  },
  "dependencies": {
    "@typegoose/typegoose": "9.11.2",
    "bufferutil": "4.0.7",
    "chrono-node": "2.4.1",
    "discord.js": "14.6.0",
    "dotenv": "16.0.3",
    "erlpack": "github:discord/erlpack",
    "human-date": "1.4.0",
    "match-sorter": "6.3.1",
    "mongoose": "6.5.5",
    "superagent": "8.0.3",
    "utf-8-validate": "5.0.10",
    "winston": "3.8.2",
    "winston-daily-rotate-file": "4.7.1",
    "zlib-sync": "0.1.7"
  },
  "devDependencies": {
    "@tsconfig/node18-strictest": "1.0.0",
    "@types/human-date": "1.4.2",
    "@types/node": "18.11.7",
    "@types/superagent": "4.1.15",
    "eslint": "8.26.0",
    "eslint-config-promise": "github:promise/eslint-config",
    "typescript": "4.6.4"
  },
  "eslintConfig": {
    "extends": "promise"
  }
}
